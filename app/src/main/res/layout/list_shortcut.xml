<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shortcutListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shortcutImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_shortcut_background"
            android:padding="13dp"
            android:src="@drawable/ic_addmoney" />

        <TextView
            android:id="@+id/shortcutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shortcutImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-4sp"
            android:text="Add money"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>