<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewHeader"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good morning"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="46dp"
        app:layout_constraintStart_toStartOf="@id/viewHeader"
        app:layout_constraintTop_toTopOf="@id/viewHeader"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="22dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="@+id/textTitleHeader"
        app:layout_constraintLeft_toRightOf="@id/textTitleHeader"
        app:layout_constraintRight_toRightOf="@id/viewHeader"
        app:layout_constraintTop_toTopOf="@id/viewHeader" />

    <TextView
        android:id="@+id/textAccHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GBP Account 1"
        android:textSize="14dp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="46dp"
        app:layout_constraintStart_toStartOf="@id/viewHeader"
        app:layout_constraintTop_toBottomOf="@id/textTitleHeader"/>

    <TextView
        android:id="@+id/valueHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â£ 9,000.00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="57dp"
        android:layout_marginRight="46dp"
        app:layout_constraintStart_toStartOf="@id/viewHeader"
        app:layout_constraintTop_toBottomOf="@id/textAccHeader"/>

    <ImageButton
        android:id="@+id/iconHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_show"
        app:layout_constraintBottom_toBottomOf="@+id/valueHeader"
        app:layout_constraintStart_toEndOf="@+id/valueHeader"
        app:layout_constraintTop_toBottomOf="@+id/textAccHeader" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.5dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_icon24"
        app:layout_constraintLeft_toLeftOf="@id/viewHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valueHeader" />

    <TextView
        android:id="@+id/valueIconHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="25,000"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iconHeader"
        app:layout_constraintTop_toBottomOf="@id/valueHeader" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewShortcut1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewHeader">

        <LinearLayout
            android:id="@+id/viewItem1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/viewShortcut1"
            app:layout_constraintRight_toLeftOf="@id/viewItem2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewShortcut1">

            <ImageButton
                android:id="@+id/btn_item1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/btn_shortcut_background"
                android:src="@drawable/ic_addmoney"
                app:layout_constraintEnd_toEndOf="@+id/viewItem1"
                app:layout_constraintStart_toStartOf="@+id/viewItem1"
                app:layout_constraintTop_toTopOf="@+id/viewItem1" />

            <TextView
                android:id="@+id/txt_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-4sp"
                android:text="Add money"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item1"
                app:layout_constraintLeft_toLeftOf="@id/viewItem1"
                app:layout_constraintRight_toRightOf="@id/viewItem1"
                app:layout_constraintStart_toStartOf="@+id/btn_item1"
                app:layout_constraintTop_toBottomOf="@id/btn_item1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewItem2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            app:layout_constraintTop_toTopOf="@id/viewShortcut1"
            app:layout_constraintLeft_toRightOf="@id/viewItem1"
            app:layout_constraintRight_toLeftOf="@id/viewItem3">

            <ImageButton
                android:id="@+id/btn_item2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_payment"
                android:background="@drawable/btn_shortcut_background"
                app:layout_constraintEnd_toEndOf="@+id/viewItem2"
                app:layout_constraintStart_toStartOf="@+id/viewItem2"
                app:layout_constraintTop_toTopOf="@+id/viewItem2" />

            <TextView
                android:id="@+id/txt_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-4sp"
                android:text="Payment"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item2"
                app:layout_constraintLeft_toLeftOf="@id/viewItem2"
                app:layout_constraintRight_toRightOf="@id/viewItem2"
                app:layout_constraintStart_toStartOf="@+id/btn_item2"
                app:layout_constraintTop_toBottomOf="@id/btn_item2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewItem3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            app:layout_constraintTop_toTopOf="@id/viewShortcut1"
            app:layout_constraintLeft_toRightOf="@id/viewItem2"
            app:layout_constraintRight_toLeftOf="@id/viewItem4">

            <ImageButton
                android:id="@+id/btn_item3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_reqstate"
                android:background="@drawable/btn_shortcut_background"
                app:layout_constraintEnd_toEndOf="@+id/viewItem3"
                app:layout_constraintStart_toStartOf="@+id/viewItem3"
                app:layout_constraintTop_toTopOf="@+id/viewItem3" />

            <TextView
                android:id="@+id/txt_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_horizontal|top"
                android:text="Request\nstatement"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item3"
                app:layout_constraintLeft_toLeftOf="@id/viewItem3"
                app:layout_constraintRight_toRightOf="@id/viewItem3"
                app:layout_constraintStart_toStartOf="@+id/btn_item3"
                app:layout_constraintTop_toBottomOf="@id/btn_item3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/viewShortcut1"
            app:layout_constraintLeft_toRightOf="@id/viewItem3"
            app:layout_constraintTop_toTopOf="@id/viewShortcut1">

            <ImageButton
                android:id="@+id/btn_item4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/btn_shortcut_background"
                android:src="@drawable/ic_fav"
                app:layout_constraintEnd_toEndOf="@+id/viewItem4"
                app:layout_constraintStart_toStartOf="@+id/viewItem4"
                app:layout_constraintTop_toTopOf="@+id/viewItem4" />

            <TextView
                android:id="@+id/txt_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-4sp"
                android:text="Favorite"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item4"
                app:layout_constraintLeft_toLeftOf="@id/viewItem4"
                app:layout_constraintRight_toRightOf="@id/viewItem4"
                app:layout_constraintStart_toStartOf="@+id/btn_item4"
                app:layout_constraintTop_toBottomOf="@id/btn_item4" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewShortcut2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/viewShortcut1">

        <LinearLayout
            android:id="@+id/viewItem5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/viewShortcut2"
            app:layout_constraintRight_toLeftOf="@id/viewItem6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewShortcut2">

            <ImageButton
                android:id="@+id/btn_item5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/btn_shortcut_background"
                android:src="@drawable/ic_history"
                app:layout_constraintEnd_toEndOf="@+id/viewItem5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@+id/viewItem5"
                app:layout_constraintTop_toTopOf="@+id/viewItem5" />

            <TextView
                android:id="@+id/txt_item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-4sp"
                android:text="History"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item5"
                app:layout_constraintLeft_toLeftOf="@id/viewItem5"
                app:layout_constraintRight_toRightOf="@id/viewItem5"
                app:layout_constraintStart_toStartOf="@+id/btn_item5"
                app:layout_constraintTop_toBottomOf="@id/btn_item5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewItem6"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            app:layout_constraintTop_toTopOf="@id/viewShortcut2"
            app:layout_constraintLeft_toRightOf="@id/viewItem5"
            app:layout_constraintRight_toLeftOf="@id/viewItem7">

            <ImageButton
                android:id="@+id/btn_item6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_addmoney"
                android:background="@drawable/btn_shortcut_background"
                app:layout_constraintEnd_toEndOf="@+id/viewItem6"
                app:layout_constraintStart_toStartOf="@+id/viewItem6"
                app:layout_constraintTop_toTopOf="@+id/viewItem6" />

            <TextView
                android:id="@+id/txt_item6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-4sp"
                android:text="button text"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item6"
                app:layout_constraintLeft_toLeftOf="@id/viewItem6"
                app:layout_constraintRight_toRightOf="@id/viewItem6"
                app:layout_constraintStart_toStartOf="@+id/btn_item6"
                app:layout_constraintTop_toBottomOf="@id/btn_item6" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewItem7"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            app:layout_constraintTop_toTopOf="@id/viewShortcut2"
            app:layout_constraintLeft_toRightOf="@id/viewItem6"
            app:layout_constraintRight_toLeftOf="@id/viewItem8">

            <ImageButton
                android:id="@+id/btn_item7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_addmoney"
                android:background="@drawable/btn_shortcut_background"
                app:layout_constraintEnd_toEndOf="@+id/viewItem7"
                app:layout_constraintStart_toStartOf="@+id/viewItem7"
                app:layout_constraintTop_toTopOf="@+id/viewItem7" />

            <TextView
                android:id="@+id/txt_item7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|top"
                android:text="button text"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item7"
                app:layout_constraintLeft_toLeftOf="@id/viewItem7"
                app:layout_constraintRight_toRightOf="@id/viewItem7"
                app:layout_constraintStart_toStartOf="@+id/btn_item7"
                app:layout_constraintTop_toBottomOf="@id/btn_item7" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewItem8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/viewShortcut2"
            app:layout_constraintLeft_toRightOf="@id/viewItem7"
            app:layout_constraintTop_toTopOf="@id/viewShortcut2">

            <ImageButton
                android:id="@+id/btn_item8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/btn_shortcut_background"
                android:src="@drawable/ic_moreservices"
                app:layout_constraintEnd_toEndOf="@+id/viewItem8"
                app:layout_constraintStart_toStartOf="@+id/viewItem8"
                app:layout_constraintTop_toTopOf="@+id/viewItem8" />

            <TextView
                android:id="@+id/txt_item8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-4sp"
                android:text="More\nservices"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_item8"
                app:layout_constraintLeft_toLeftOf="@id/viewItem8"
                app:layout_constraintRight_toRightOf="@id/viewItem8"
                app:layout_constraintStart_toStartOf="@+id/btn_item8"
                app:layout_constraintTop_toBottomOf="@id/btn_item8" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transactionListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewShortcut2">

        <View
            android:id="@+id/transactionListTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/transactionListView" />

        <TextView
            android:id="@+id/transactionTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Recent transaction"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/transactionListTitle"
            app:layout_constraintRight_toRightOf="@id/transactionListTitle"
            app:layout_constraintStart_toStartOf="@+id/transactionListTitle"
            app:layout_constraintTop_toTopOf="@id/transactionListTitle" />

        <ImageView
            android:id="@+id/rectangles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rectangle"
            app:layout_constraintBottom_toBottomOf="@id/transactionListTitle"
            app:layout_constraintEnd_toStartOf="@+id/transactionAll"
            app:layout_constraintTop_toBottomOf="@id/transactionTitleText" />

        <View
            android:id="@+id/transactionListAll"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            app:layout_constraintLeft_toRightOf="@id/transactionListTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/transactionListView" />

        <TextView
            android:id="@+id/transactionAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See all"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/transactionListAll"
            app:layout_constraintLeft_toLeftOf="@id/transactionListAll"
            app:layout_constraintRight_toRightOf="@id/transactionListAll"
            app:layout_constraintTop_toTopOf="@id/transactionListAll" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/transactionListView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactionListRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>


